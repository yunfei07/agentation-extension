{
  "manifest_version": 3,
  "name": "FlowMarker",
  "version": "0.1.0",
  "description": "Use FlowMarker annotations and generate Playwright Python tests.",
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle FlowMarker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
